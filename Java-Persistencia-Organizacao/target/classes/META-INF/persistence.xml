<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">


    <persistence-unit name="companhia" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!--Classes mapeadas-->
        <class>br.com.persistencia.java.model.Funcionario</class>
        <class>br.com.persistencia.java.model.Pesquisador</class>
        <class>br.com.persistencia.java.model.Secretario</class>
        <class>br.com.persistencia.java.model.FuncionarioLimpeza</class>
        <class>br.com.persistencia.java.model.Dependente</class>
        <class>br.com.persistencia.java.model.Departamento</class>
        <class>br.com.persistencia.java.model.Projeto</class>
        <class>br.com.persistencia.java.model.HorasTrabalhadas</class>



        <!--?createDatabaseIfNotExist=true-->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/companhia?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Info@123"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!--Atualiza as tabelas do banco se a estrutura da classe mapeada for alterada-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>

</persistence>
